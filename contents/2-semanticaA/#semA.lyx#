\end_inset

 -- per 3.2
\end_layout

\begin_layout Standard
\begin_inset Formula $\teolm{\Lambda}{\boa}\wedge\boxx b\implies\boxx c$
\end_inset

 -- per la combinazione delle due implicazioni precedenti
\end_layout

\begin_layout Standard
