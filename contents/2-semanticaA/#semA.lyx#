\end_inset

 -- per 3.3
\end_layout

\begin_layout Standard
\begin_inset Formula $\teolm{\Lambda}{\boa}$
\end_inset

 
\end_layout

\begin_layout Standard
abbiamo così dimostrato la chiusura secondo la necessitazione.
\end_layout

\begin_layout Standard
\begin_inset Formula $\teolm{\Lambda}{a\wedge b\implies c}$
\end_inset


\end_layout

\begin_layout Standard
